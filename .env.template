# Trazo Backend Environment Variables Template
# Copy this file to .env and set the actual values for your environment

# Django Settings
SECRET_KEY=your-super-secret-django-key-here
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name

# CORS and CSRF Settings
BASE_TRAZO_URL=https://yourdomain.com/
BASE_APP_URL=https://app.yourdomain.com/
BASE_CONSUMER_URL=https://consumer.yourdomain.com/
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Email Configuration
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
FROM_EMAIL_ADDRESS=noreply@yourdomain.com
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# AWS S3 Configuration (for production file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# USDA API Keys (CRITICAL: Never commit these to version control)
# Register at: https://quickstats.nass.usda.gov/api
USDA_NASS_API_KEY=your-usda-nass-api-key-here
# Register at: https://api.ers.usda.gov/
USDA_ERS_API_KEY=your-usda-ers-api-key-here
# Register at: https://fdc.nal.usda.gov/api-guide.html
USDA_FOODDATA_API_KEY=your-usda-fooddata-api-key-here

# John Deere API Configuration (optional)
JOHN_DEERE_CLIENT_ID=your-john-deere-client-id
JOHN_DEERE_CLIENT_SECRET=your-john-deere-client-secret
JOHN_DEERE_REDIRECT_URI=https://api.yourdomain.com/carbon/john-deere/callback/
JOHN_DEERE_USE_SANDBOX=False

# Weather API Configuration (optional)
OPENWEATHER_API_KEY=your-openweather-api-key

# Stripe Configuration (for payments)
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Blockchain Configuration (optional)
ALCHEMY_API_KEY=your-alchemy-api-key
PRIVATE_KEY=your-ethereum-private-key

# Load Balancer (for production)
LOAD_BALANCER_DNS=your-load-balancer-dns

# Security Settings
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True