# Trazo Backend Environment Variables

# Django Configuration
SECRET_KEY=your_secret_key_here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_NAME=trazo_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your_db_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Social Authentication Configuration

# Google OAuth 2.0
# Get client ID and secret from: https://console.developers.google.com/
# Instructions:
# 1. Create a new project or select existing
# 2. Enable Google+ API and Google Identity Toolkit API
# 3. Create OAuth 2.0 credentials
# 4. Add authorized redirect URIs: http://localhost:3000, http://app.localhost:3000, http://consumer.localhost:3000
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Facebook OAuth 2.0
# Get app ID and secret from: https://developers.facebook.com/
# Instructions:
# 1. Create a new app or select existing
# 2. Add Facebook Login product
# 3. Configure OAuth redirect URIs in app settings
# 4. Add domains: localhost, app.localhost, consumer.localhost
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# Apple Sign In
# Get credentials from: https://developer.apple.com/
# Instructions:
# 1. Create App ID with Sign In with Apple capability
# 2. Create Service ID for web authentication
# 3. Create and download private key for Apple authentication
# 4. Configure return URLs and domains
APPLE_CLIENT_ID=your.apple.service.id
APPLE_CLIENT_SECRET=your_generated_jwt_token_here
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----
your_apple_private_key_content_here
-----END PRIVATE KEY-----

# CORS and CSRF Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://app.localhost:3000,http://consumer.localhost:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://app.localhost:3000,http://consumer.localhost:3000

# Base URLs for different platforms
BASE_APP_URL=http://app.localhost:3000/
BASE_CONSUMER_URL=http://consumer.localhost:3000/

# Email Configuration (for account verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password

# Other configurations (add as needed)
ENVIRONMENT=development